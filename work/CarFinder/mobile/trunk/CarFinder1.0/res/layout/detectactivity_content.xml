<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
       <LinearLayout android:id="@+id/detect_view_title"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content">
       </LinearLayout>
    <LinearLayout android:id="@+id/detect_view_content"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10sp"
                      android:gravity="center_vertical|center_horizontal"
                >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="40sp"
                    android:text="TID:">
            </TextView>
             <TextView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="40sp"
                       android:id="@+id/finder_trackid"
                       android:text="">
             </TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="40sp"
                      android:layout_marginLeft="20sp"
                      android:layout_marginRight="20sp"
                      android:gravity="center_vertical|center_horizontal">
            <ImageView android:id="@+id/leida_anim"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                    />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="10sp">
                <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="20sp"
                          android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/last_position_lat_lon"
                            />
                    <TextView  android:id="@+id/position_show_lat_lon"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="......."
                            />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10sp"
                              android:layout_marginLeft="20sp"
                              android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/last_position_addr"
                            />
                    <TextView  android:id="@+id/position_show_addr"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="......."
                            />
                </LinearLayout>
            <Button android:id="@+id/btn_test" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="test"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>