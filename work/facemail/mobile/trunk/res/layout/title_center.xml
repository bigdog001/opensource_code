<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head_layout"
            android:background="@color/midle_title_blue" >
        <ImageView
                android:id="@+id/showLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flipper_head_flip"/>
        <RelativeLayout  style="@style/FacemailWrap" android:layout_width="fill_parent" android:background="@color/midle_title_blue">
            <Button android:id="@+id/title_left_button" android:text="@string/mail_title_bar_return"
                    style="@style/FacemailWrap"
                    android:background="@drawable/k_button_back"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="gone"
                    />
            <TextView android:id="@+id/emails_show_list_username" style="@style/FacemailWrap"
                      android:layout_centerInParent="true" android:text="c1b22a333@sohu.com"
                      android:visibility="gone"
                      android:textColor="@android:color/white"/>
            <Button android:id="@+id/title_right_function_button"
                    android:background="@drawable/k_button_title"
                    style="@style/FacemailWrap"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="gone"
                    android:text="@string/mail_title_bar_setting"
                     />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>