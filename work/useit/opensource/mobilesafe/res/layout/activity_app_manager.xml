<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#3185A3"
            android:gravity="center"
            android:text="程序管理器"
            android:textColor="#B3EBFF"
            android:textSize="25sp" />
        
        <ProgressBar 
            android:visibility="invisible"
            android:id="@+id/pb_appmanger"
            android:layout_centerVertical="true"
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_appmanger_rom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用内存:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_appmanger_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="可用SD卡:"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/lv_appmanager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>

        <TextView
            android:id="@+id/tv_app_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#55888888"
            android:text="用户程序(3)个"
            android:textColor="#000000" />
    </FrameLayout>

</LinearLayout>