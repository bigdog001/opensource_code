<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:background="#3185A3"
        android:gravity="center"
        android:text="请输入黑名单号码"
        android:textColor="#B3EBFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_add_blacknumber"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:hint="请输入拦截的号码"
        android:inputType="phone" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="全部"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信"
            android:textColor="#000000" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_add_blacknumber_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_selector"
            android:text="添加" />

        <Button
            android:id="@+id/bt_add_blacknumber_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:background="@drawable/button_bg_selector"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>